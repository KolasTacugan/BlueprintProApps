<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        android:paddingTop="32dp"
        android:paddingBottom="24dp">

        <!-- Header Section -->
        <TextView
            android:id="@+id/stepTitle"
            android:text="Review"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#091635"
            android:fontFamily="@font/raleway_bold"
            android:letterSpacing="0.01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage and review project revisions"
            android:textColor="#6B7280"
            android:textSize="14sp"
            android:fontFamily="@font/raleway_regular"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="24dp" />

        <!-- Current Revision Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <TextView
                    android:id="@+id/currentRevisionLabel"
                    android:text="Current Revision"
                    android:textColor="#091635"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/raleway_bold"
                    android:layout_marginBottom="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/currentRevisionContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/currentRevisionName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="None yet"
                        android:textSize="15sp"
                        android:textColor="#6B7280"
                        android:fontFamily="@font/raleway_regular"
                        android:maxLines="2"
                        android:ellipsize="end" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/openCurrentBtn"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Open"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/raleway_bold"
                        android:letterSpacing="0.01"
                        android:textColor="@android:color/white"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="10dp"
                        app:cornerRadius="8dp"
                        app:backgroundTint="#0D3C80" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Previous Revisions Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <TextView
                    android:text="Previous Revisions"
                    android:textColor="#091635"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/raleway_bold"
                    android:layout_marginBottom="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/revisionsRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Upload Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/uploadRevisionBtn"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload New Revision"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:textStyle="bold"
            android:fontFamily="@font/raleway_bold"
            android:letterSpacing="0.01"
            android:textColor="#0D3C80"
            android:paddingVertical="14dp"
            android:layout_marginBottom="12dp"
            app:cornerRadius="12dp"
            app:strokeColor="#0D3C80"
            app:strokeWidth="2dp"
            app:icon="@android:drawable/ic_menu_upload"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="#0D3C80" />

        <!-- Next Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/nextBtn"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next Step"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/raleway_bold"
            android:letterSpacing="0.01"
            android:textColor="@android:color/white"
            android:paddingVertical="16dp"
            app:cornerRadius="12dp"
            app:backgroundTint="#4CAF50"
            app:icon="@android:drawable/ic_media_play"
            app:iconGravity="textEnd" />

    </LinearLayout>
</ScrollView>