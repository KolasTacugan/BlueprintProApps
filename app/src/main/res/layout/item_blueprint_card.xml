<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp"
    android:background="@android:color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Blueprint Image with Price Badge -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="160dp">

            <ImageView
                android:id="@+id/blueprintImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@android:drawable/ic_menu_gallery"
                android:contentDescription="Blueprint Image" />

            <!-- Price Badge Overlay -->
            <TextView
                android:id="@+id/blueprintPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_margin="10dp"
                android:text="â‚±0"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:fontFamily="@font/raleway_bold"
                android:background="@drawable/card_modern"
                android:backgroundTint="#0D3C80"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:elevation="4dp" />

        </FrameLayout>

        <!-- Content Section -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <!-- Blueprint Name -->
            <TextView
                android:id="@+id/blueprintName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blueprint Name"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#091635"
                android:fontFamily="@font/raleway_bold"
                android:letterSpacing="0.005"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp" />

            <!-- Blueprint Description -->
            <TextView
                android:id="@+id/blueprintDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Short description"
                android:textSize="12sp"
                android:textColor="#6B7280"
                android:fontFamily="@font/raleway_regular"
                android:layout_marginTop="4dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp" />

            <!-- Add to Cart Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/addToCartBtn"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:text="Add to Cart"
                android:textAllCaps="false"
                android:textSize="13sp"
                android:textStyle="bold"
                android:fontFamily="@font/raleway_bold"
                android:letterSpacing="0.01"
                android:textColor="@android:color/white"
                app:cornerRadius="10dp"
                app:backgroundTint="#0D3C80"
                app:rippleColor="#1E40AF"
                android:layout_marginTop="10dp" />

        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
