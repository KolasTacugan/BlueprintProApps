<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center_vertical">

        <!-- Left side: Revision info with icon -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Icon Container -->
            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/card_modern"
                android:backgroundTint="#E8F0FE"
                android:layout_marginEnd="12dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@android:drawable/ic_menu_recent_history"
                    app:tint="#0D3C80" />

            </FrameLayout>

            <!-- Revision Name -->
            <TextView
                android:id="@+id/revisionName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Revision_ver.1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#0D3C80"
                android:fontFamily="@font/raleway_bold"
                android:letterSpacing="0.01"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- Right side: Open button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/openBtn"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Open"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="@font/raleway_bold"
            android:letterSpacing="0.01"
            android:textColor="@android:color/white"
            app:cornerRadius="12dp"
            app:backgroundTint="#0D3C80"
            app:rippleColor="#1E40AF"
            android:paddingHorizontal="20dp"
            android:minWidth="80dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
