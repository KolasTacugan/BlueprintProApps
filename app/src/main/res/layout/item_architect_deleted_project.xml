<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- Icon Container -->
            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/card_modern"
                android:backgroundTint="#FEE2E2"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_delete"
                    app:tint="#DC2626" />

            </FrameLayout>

            <!-- Project Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deleted Project"
                    android:textSize="12sp"
                    android:textColor="#6B7280"
                    android:fontFamily="@font/raleway_regular"
                    android:letterSpacing="0.05"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/deletedProjectName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Project Title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#0D3C80"
                    android:fontFamily="@font/raleway_bold"
                    android:letterSpacing="0.01"
                    android:maxLines="1"
                    android:ellipsize="end" />

            </LinearLayout>

        </LinearLayout>

        <!-- Client Name -->
        <TextView
            android:id="@+id/deletedProjectClient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Client Name"
            android:textSize="14sp"
            android:textColor="#374151"
            android:fontFamily="@font/raleway_regular"
            android:layout_marginBottom="6dp" />

        <!-- Deleted Date -->
        <TextView
            android:id="@+id/deletedProjectDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deleted: Jan 01, 2025"
            android:textSize="12sp"
            android:textColor="#9CA3AF"
            android:fontFamily="@font/raleway_regular"
            android:layout_marginBottom="16dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E5E7EB"
            android:layout_marginBottom="16dp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Delete Forever Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/deleteForeverBtn"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="12dp"
                android:text="Delete"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="@font/raleway_bold"
                android:letterSpacing="0.01"
                app:cornerRadius="12dp"
                app:strokeColor="#DC2626"
                app:strokeWidth="2dp"
                android:textColor="#DC2626"
                app:rippleColor="#FEE2E2"
                app:icon="@drawable/ic_delete"
                app:iconTint="#DC2626"
                app:iconGravity="textStart"
                app:iconPadding="8dp" />

            <!-- Restore Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/restoreBtn"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Restore"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="@font/raleway_bold"
                android:letterSpacing="0.01"
                android:textColor="@android:color/white"
                app:cornerRadius="12dp"
                app:backgroundTint="#0D3C80"
                app:rippleColor="#1E40AF"
                app:icon="@drawable/ic_restore"
                app:iconTint="@android:color/white"
                app:iconGravity="textStart"
                app:iconPadding="8dp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
