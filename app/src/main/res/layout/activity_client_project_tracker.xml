    <!-- ViewPager Content -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/stepViewPager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toTopOf="@id/stepButtonsCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Step Buttons Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/stepButtonsCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:strokeWidth="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/stepButtonsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center"
            android:weightSum="3">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReview"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                android:text="Review"
                android:textAllCaps="false"
                android:textSize="11sp"
                android:textStyle="bold"
                android:fontFamily="@font/raleway_bold"
                android:letterSpacing="0"
                android:textColor="@android:color/white"
                android:maxLines="1"
                android:paddingHorizontal="4dp"
                app:cornerRadius="12dp"
                app:backgroundTint="#0D3C80"
                app:rippleColor="#1E40AF" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCompliance"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="6dp"
                android:text="Compliance"
                android:textAllCaps="false"
                android:textSize="11sp"
                android:textStyle="bold"
                android:fontFamily="@font/raleway_bold"
                android:letterSpacing="0"
                android:textColor="@android:color/white"
                android:maxLines="1"
                android:paddingHorizontal="4dp"
                app:cornerRadius="12dp"
                app:backgroundTint="#0D3C80"
                app:rippleColor="#1E40AF" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFinalization"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:text="Finalization"
                android:textAllCaps="false"
                android:textSize="11sp"
                android:textStyle="bold"
                android:fontFamily="@font/raleway_bold"
                android:letterSpacing="0"
                android:textColor="@android:color/white"
                android:maxLines="1"
                android:paddingHorizontal="4dp"
                app:cornerRadius="12dp"
                app:backgroundTint="#0D3C80"
                app:rippleColor="#1E40AF" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

