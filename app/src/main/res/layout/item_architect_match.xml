<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header Section with Icon -->
        <!-- Header Section with Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- Icon Container -->
            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/card_modern"
                android:backgroundTint="#E8F0FE"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@android:drawable/ic_menu_myplaces"
                    app:tint="#0D3C80" />
            </FrameLayout>

            <!-- Name + Similarity Row -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <!-- Architect Name -->
                <TextView
                    android:id="@+id/architectName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="John Santos"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#0D3C80"
                    android:fontFamily="@font/raleway_bold"
                    android:letterSpacing="0.01"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <!-- ⭐ Similarity Percentage Badge -->
                <TextView
                    android:id="@+id/similarityScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="82%"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#0D3C80"
                    android:fontFamily="@font/raleway_bold"
                    android:background="@drawable/similarity_badge"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

        </LinearLayout>


        <!-- Style Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Style: "
                android:textSize="14sp"
                android:textColor="#6B7280"
                android:fontFamily="@font/raleway_regular"
                android:letterSpacing="0.01" />

            <TextView
                android:id="@+id/architectStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Modern / Minimalist"
                android:textSize="14sp"
                android:textColor="#091635"
                android:fontFamily="@font/raleway_regular"
                android:letterSpacing="0.01"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- Budget Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Budget: "
                android:textSize="14sp"
                android:textColor="#6B7280"
                android:fontFamily="@font/raleway_regular"
                android:letterSpacing="0.01" />

            <TextView
                android:id="@+id/architectBudget"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="₱300k - ₱500k"
                android:textSize="14sp"
                android:textColor="#091635"
                android:fontFamily="@font/raleway_regular"
                android:letterSpacing="0.01"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- Match Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/matchButton"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Match"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:textStyle="bold"
            android:fontFamily="@font/raleway_bold"
            android:letterSpacing="0.01"
            android:textColor="@android:color/white"
            app:cornerRadius="12dp"
            app:backgroundTint="#0D3C80"
            app:rippleColor="#1E40AF" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
