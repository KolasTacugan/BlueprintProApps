<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@color/light_gray"
    tools:context=".network.ProfileActivity">

    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnLogout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:clipToPadding="false">

            <!-- Header -->
            <TextView
                android:id="@+id/tvProfileTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:fontFamily="@font/raleway_bold"
                android:letterSpacing="0.005"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="18dp" />

            <!-- Profile Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_profile_card"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="24dp"
                android:elevation="2dp"
                android:layout_marginBottom="4dp">

                <!-- Avatar -->
                <FrameLayout
                    android:layout_width="96dp"
                    android:layout_height="96dp">

                    <ImageView
                        android:id="@+id/imgProfile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_user_placeholder"
                        android:background="@drawable/bg_profile_image_border"
                        android:contentDescription="Profile Picture" />

                    <TextView
                        android:id="@+id/tvProBadge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|end"
                        android:text="PRO"
                        android:background="@drawable/bg_pro_badge"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/raleway_bold"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="3dp"
                        android:visibility="gone" />
                </FrameLayout>

                <!-- Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="12dp">

                    <TextView
                        android:id="@+id/tvFullName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="John Doe"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/primary"
                        android:fontFamily="@font/raleway_bold"
                        android:letterSpacing="0.005"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/tvEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="john.doe@email.com"
                        android:textColor="@color/dark_gray"
                        android:textSize="14sp"
                        android:fontFamily="@font/raleway_regular"
                        android:layout_marginTop="8dp"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/tvPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+63 912 345 6789"
                        android:textColor="@color/dark_gray"
                        android:textSize="14sp"
                        android:fontFamily="@font/raleway_regular"
                        android:layout_marginTop="6dp" />
                </LinearLayout>

                <!-- Edit -->
                <ImageButton
                    android:id="@+id/btnEditProfile"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/bg_edit_button"
                    android:src="@drawable/ic_edit"
                    app:tint="@color/white"
                    android:contentDescription="Edit Profile"
                    android:padding="10dp" />
            </LinearLayout>

            <!-- Action Buttons (Favorites removed) -->
            <Button
                android:id="@+id/btnSubscription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subscription"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:fontFamily="@font/raleway_bold"
                android:background="@drawable/bg_primary_button"
                android:paddingVertical="18dp"
                android:letterSpacing="0.01"
                android:layout_marginTop="24dp"
                android:elevation="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Purchased Blueprints"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:textSize="18sp"
                android:paddingTop="16dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvPurchasedBlueprints"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

            <!-- Architect Credentials -->
            <LinearLayout
                android:id="@+id/layoutArchitectCredentials"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                android:background="@drawable/bg_profile_card"
                android:padding="24dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Architect Credentials"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/primary"
                    android:fontFamily="@font/raleway_bold"
                    android:letterSpacing="0.005" />

                <TextView
                    android:id="@+id/tvCredentialsFile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:textColor="@color/dark_gray"
                    android:textSize="14sp"
                    android:fontFamily="@font/raleway_regular"
                    android:layout_marginTop="12dp"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>

            <!-- Spacer for bottom padding -->
            <View
                android:layout_width="match_parent"
                android:layout_height="24dp" />

        </LinearLayout>
    </ScrollView>

    <!-- ðŸš€ Logout Button - Fixed at Bottom -->
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Log Out"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:fontFamily="@font/raleway_bold"
        app:cornerRadius="12dp"
        app:strokeColor="#DC2626"
        app:strokeWidth="2dp"
        android:textColor="#DC2626"
        app:rippleColor="#FEE2E2"
        app:backgroundTint="@android:color/white"
        android:paddingVertical="18dp"
        android:letterSpacing="0.01"
        android:elevation="4dp"
        android:layout_margin="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
