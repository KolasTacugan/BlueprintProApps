<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@color/light_gray"
    android:padding="16dp"
    tools:context=".network.ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvProfileTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Profile"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/primary" />

            <ImageButton
                android:id="@+id/btnSettings"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_settings"
                android:scaleType="centerInside"
                android:padding="4dp"
                app:tint="@color/primary"
                android:contentDescription="Settings" />
        </LinearLayout>

        <!-- Profile Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_profile_card"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:layout_marginTop="20dp"
            android:elevation="3dp">

            <!-- Avatar -->
            <FrameLayout
                android:layout_width="80dp"
                android:layout_height="80dp">

                <ImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_user_placeholder"
                    android:background="@drawable/bg_profile_image_border"
                    android:contentDescription="Profile Picture" />

                <TextView
                    android:id="@+id/tvProBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:text="PRO"
                    android:background="@drawable/bg_pro_badge"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:padding="4dp"
                    android:visibility="gone" />
            </FrameLayout>

            <!-- Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:id="@+id/tvFullName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Doe"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/primary" />

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="john.doe@email.com"
                    android:textColor="@color/dark_gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+63 912 345 6789"
                    android:textColor="@color/dark_gray"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Edit -->
            <ImageButton
                android:id="@+id/btnEditProfile"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/bg_edit_button"
                android:src="@drawable/ic_edit"
                app:tint="@color/white"
                android:contentDescription="Edit Profile" />
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:weightSum="2">

            <Button
                android:id="@+id/btnFavorites"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Favorites"
                android:textColor="@color/white"
                android:background="@drawable/bg_secondary_button"
                android:padding="12dp" />

            <Button
                android:id="@+id/btnSubscription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Subscription"
                android:textColor="@color/white"
                android:background="@drawable/bg_primary_button"
                android:padding="12dp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Architect Credentials -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_profile_card"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Architect Credentials"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/primary" />

            <TextView
                android:id="@+id/tvCredentialsFile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N/A"
                android:textColor="@color/dark_gray"
                android:textSize="14sp"
                android:layout_marginTop="6dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
