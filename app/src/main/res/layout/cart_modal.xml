<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cartLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_white_card"
    android:elevation="8dp"
    android:clipToOutline="true">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="24dp"
        android:paddingTop="24dp"
        android:paddingBottom="16dp"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cartTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shopping Cart"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#091635"
                android:fontFamily="@font/raleway_bold"
                android:letterSpacing="0.01" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Review your selected blueprints"
                android:textColor="#6B7280"
                android:textSize="14sp"
                android:fontFamily="@font/raleway_regular"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/cartCloseBtn"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_close"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Close cart"
            app:tint="#6B7280"
            android:padding="10dp" />
    </LinearLayout>

    <!-- Tabs -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/cartTabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="2dp"
        app:tabMode="fixed"
        app:tabIndicatorColor="#0D3C80"
        app:tabIndicatorHeight="3dp"
        app:tabTextColor="#6B7280"
        app:tabSelectedTextColor="#0D3C80"
        app:tabPaddingStart="20dp"
        app:tabPaddingEnd="20dp" />

    <!-- ViewPager -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/cartViewPager"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="16dp"
        android:paddingBottom="16dp"
        android:clipToPadding="false" />

    <!-- Footer -->

</LinearLayout>
