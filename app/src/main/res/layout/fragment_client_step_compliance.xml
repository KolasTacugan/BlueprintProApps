<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        android:paddingTop="32dp"
        android:paddingBottom="24dp">

        <!-- Header Section -->
        <TextView
            android:id="@+id/stepTitle"
            android:text="Compliance"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#091635"
            android:fontFamily="@font/raleway_bold"
            android:letterSpacing="0.01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload required compliance documents"
            android:textColor="#6B7280"
            android:textSize="14sp"
            android:fontFamily="@font/raleway_regular"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="24dp" />

        <!-- Zoning Files Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zoning Files"
                    android:textColor="#091635"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/raleway_bold"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:id="@+id/zoningFilesContainer"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Other Files Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other Files"
                    android:textColor="#091635"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/raleway_bold"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:id="@+id/otherFilesContainer"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
