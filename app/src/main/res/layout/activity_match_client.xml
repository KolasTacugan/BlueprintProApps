<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:background="@color/light_gray">

    <!-- ðŸ–¼ Logo -->
    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/bpp_logo"
        android:contentDescription="BlueprintPro Logo"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/searchTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0.5"/>

    <!-- ðŸ· Title -->
    <TextView
        android:id="@+id/searchTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Architect Search"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#091635"
        android:fontFamily="@font/raleway_bold"

        app:layout_constraintTop_toBottomOf="@id/appLogo"
        app:layout_constraintBottom_toTopOf="@id/searchSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ðŸ“ Subtitle -->
    <TextView
        android:id="@+id/searchSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find the perfect architect for your project"
        android:textSize="14sp"
        android:textColor="#6B7280"
        android:fontFamily="@font/raleway_regular"

        app:layout_constraintTop_toBottomOf="@id/searchTitle"
        app:layout_constraintBottom_toTopOf="@id/clientPrompt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ðŸ” Search Bar -->
    <EditText
        android:id="@+id/clientPrompt"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:hint="Search architects..."
        android:background="@drawable/bg_search_field"
        android:paddingHorizontal="20dp"
        android:textSize="15sp"
        android:textColor="#091635"
        android:textColorHint="#6B7280"
        android:fontFamily="@font/raleway_regular"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp"

        app:layout_constraintTop_toBottomOf="@id/searchSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ðŸ¤– AI Feedback -->
    <LinearLayout
        android:id="@+id/aiFeedbackContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:padding="16dp"
        android:background="@drawable/bg_ai_feedback"

        app:layout_constraintTop_toBottomOf="@id/clientPrompt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/aiFeedbackText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#091635"
            android:textStyle="bold"
            android:fontFamily="@font/raleway_bold" />
    </LinearLayout>

    <!-- ðŸ‘¥ Results -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/matchRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:padding="16dp"

        app:layout_constraintTop_toBottomOf="@id/aiFeedbackContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- â³ Loading Overlay -->
    <LinearLayout
        android:id="@+id/loadingSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical"
        android:gravity="center"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading architects..."
            android:textColor="#6B7280"
            android:fontFamily="@font/raleway_regular"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>