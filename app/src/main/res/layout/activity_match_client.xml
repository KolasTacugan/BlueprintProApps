<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:background="#FFFFFF">

    <!-- Background -->
    <View
        android:id="@+id/headerBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/header_gradient"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Centered Header Content -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/bpp_logo"
            app:tint="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/searchTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Architect Search"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/raleway_bold"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/appLogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/searchSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Find the perfect architect for your project"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/searchTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:id="@+id/clientPrompt"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:hint="Enter your preferences..."
            android:background="@drawable/bg_search_field"
            android:paddingHorizontal="20dp"
            android:textSize="15sp"
            android:imeOptions="actionSearch"
            app:layout_constraintTop_toBottomOf="@id/searchSubtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="28dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- AI Feedback -->
    <LinearLayout
        android:id="@+id/aiFeedbackContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:padding="20dp"
        android:orientation="vertical"
        android:background="#F5F9FF"
        app:layout_constraintTop_toBottomOf="@id/headerContent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/aiFeedbackText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1E3A5F"
            android:textSize="14sp"
            android:fontFamily="@font/raleway_bold"/>
    </LinearLayout>

    <!-- Results -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/matchRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/aiFeedbackContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- âœ… FIXED Loading Section -->
    <LinearLayout
        android:id="@+id/loadingSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:background="@drawable/bg_card"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ProgressBar
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:indeterminateTint="#0D3C80"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading architects..."
            android:layout_marginTop="16dp"
            android:textColor="#1E3A5F"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
